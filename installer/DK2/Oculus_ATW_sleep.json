{
  "server": {
     "sleep": 1
  },
  "externalDevices": {
    "/myExternalOculus": {
      "deviceName": "Tracker0",
      "server": "localhost:3884",
      "descriptor": { /* can also provide a file path here, or this is the minimal */
        "interfaces": {
          "tracker": {
            "count": 1,
            "bounded": true,
            "position": false,
            "orientation": true,
            "angularVelocity": true
          }
        }
      }
    }
  },
  "aliases": {
    "/me/head": {
        "translate": [0.0, 0.0, -0.06],
        "child": "/myExternalOculus/tracker/0"
    }
  },
	"renderManagerConfig": {
		"meta": {
			"schemaVersion": 1
		},
		"renderManagerConfig": {
			"directModeEnabled": true,
			"directDisplayIndex": 0,
			"directHighPriorityEnabled": true,
			"numBuffers": 2,
			"verticalSyncEnabled": true,
			"verticalSyncBlockRenderingEnabled": true,
			"renderOverfillFactor": 1.5,
			
			"window": {
				"title": "OSVR",
				"fullScreenEnabled": true,
				"xPosition": 1920,
				"yPosition": 0
			},

			"display": {
				"rotation": 90,
				"bitsPerColor": 8
			},

			"prediction": {
					"enabled": true,
					"staticDelayMS": 9,
					"leftEyeDelayMS": 5,
					"rightEyeDelayMS": 0,
					"localTimeOverride": true
			},

			"timeWarp": {
				"enabled": true,
				"asynchronous": true,
				"maxMsBeforeVSync": 5
			}
		}
	},

	"display": {
		"meta": {
			"schemaVersion": 1
		},
		"hmd": {
			"device": {
				"properties": {
					"vendor": "Oculus",
					"model": "DK2",
					"num_displays": 1,
					"Version": "1.1",
					"Note": "Visual Common Ground"
				}
			},
			"field_of_view": {
                "monocular_horizontal": 83,
                "monocular_vertical": 92,
				"overlap_percent": 100,
				"pitch_tilt": 0
			},
			"resolutions": [
				{
				"width": 1920,
				"height": 1080,
				"video_inputs": 1,
				"display_mode": "horz_side_by_side",
				"swap_eyes": 0
				}
			],
			"distortion": {
				"distance_scale_x": 1,
				"distance_scale_y": 1,
				"polynomial_coeffs_red": [ 0, 1, 0.15 ],
				"polynomial_coeffs_green": [ 0, 1, 0.2 ],
				"polynomial_coeffs_blue": [ 0, 1, 0.25 ]
			},
			"rendering": {
				"right_roll": 0,
				"left_roll": 0
			},
			"eyes": [
				{
				"center_proj_x": 0.5,
				"center_proj_y": 0.5,
				"rotate_180": 0
				},
				{
				"center_proj_x": 0.5,
				"center_proj_y": 0.5,
				"rotate_180": 0
				}
			]
			}
		}
}
